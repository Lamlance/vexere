<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
<link rel="stylesheet" href="/css/index.css"/>

<main>
    <div class="route-detail-form container w-50">
        <h2> Thêm tuyến xe </h2>
        <form action="/api/route_detail/add" method="POST">

            <div class="form-group">
                <label for="number"> Mã xe </label>
                <input type="number" id="busId" name="busId" placeholder="Mã xe" class="form-control my-3 required" />
            </div>
            <div class="form-group">
                <label for="number"> Giá tuyến xe </label>
                <input type="number" id="price" name="price" placeholder="Giá tuyến xe"
                    class="form-control my-3 required" />
            </div>
            <div class="form-group">
                <label for="startTime"> Thời gian khởi hành </label>
                <input type="datetime-local" id="startTime" name="startTime" placeholder="Thời gian khởi hành"
                    class="form-control my-3 required" />
            </div>
            <div class="form-group">
                <label for="endTime"> Thời gian đến </label>
                <input type="datetime-local" name="endTime" name="endTime" placeholder="Thời gian đến"
                    class="form-control my-3 required" />
            </div>
            <div class="form-group">
                <label for="remainSeat"> Số ghế </label>
                <input type="number" id="remainSeat" name="remainSeat" placeholder="Số ghế"
                    class="form-control my-3 required" />
            </div>
            <div class="form-group">
                <label for="routeId"> Mã tuyến </label>
                <input type="number" id="routeId" name="routeId" placeholder="Mã tuyến"
                    class="form-control my-3 required" />
            </div>
            <button type="submit" class="btn btn-primary">
                Submit
            </button>
        </form>
    </div>
</main>