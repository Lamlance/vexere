<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
<link rel="stylesheet" href="/css/index.css"/>

<main>
    <h1 class="text-center my-2">Danh sách các tuyến xe</h1>


    <div class="route-detail-list my-3 p-lg-5">
        <a class="btn btn-primary btn-sm my-3 col-2" href="/admin/route_detail/add">
            Thêm tuyến xe
        </a>
        {{#each routeDetailList}}
        <div class="route-detail border rounded-2 p-3 my-3 row">
            <div class="col-3 route-detail-image">
                <img src="/assets/route-data.jpg" alt="Route image" style="aspect-ratio: 1/1" ; width="170px" />
            </div>

            <div class="col-9 route-detail-content">
                <div class="row">
                    <h4 class="col-6 text-start">{{ busHouse }} - Xe số {{ busId }}</h4>
                    <h4 class="col-6 text-end">{{ price }}</h4>
                </div>

                <div class="row">
                    <h6 class="fw-normal">Còn lại {{ remainSeat }} chỗ</h6>
                </div>
                <div class="start row">
                    <h5 class="fw-bold col-3">{{ startTime }}</h5>
                    <h5 class="fw-normal col-6">{{ startPlace }}</h5>
                    <a class="btn btn-primary btn-sm col-3" href="/admin/route_detail/edit/{{id}}">
                        Chỉnh sửa tuyến xe
                    </a>
                </div>
                <div>
                    <h6 class="fw-light">đến</h6>
                </div>
                <div class="end row">
                    <h5 class="fw-bold col-3">{{ endTime }}</h5>
                    <h5 class="fw-normal col-6">{{ endPlace }}</h5>
                    <a class="btn btn-danger btn-sm col-3" href="/admin/route_detail/delete/{{id}}">
                        Xoá tuyến xe
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</main>