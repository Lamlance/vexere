<main>
  <section id="banner" class="container-fluid">
    <p class="text-center text-light display-6 fw-bolder">
      VeXeRe - Cam kết hoàn 150% nếu nhà xe không giữ vé
    </p>
    <form method="get" action="/search" class="search_bar container">
      <table>
        <thead>
          <tr>
            <td>
              <div style="width: 100%" class="btn btn-light start col-4 py-3 rounded-0 rounded-start">
                <input name="fromId" type="text" class="bg-light form-control border-0" id="start-place"
                  placeholder="Điểm đi" autocomplete="off" required />
              </div>
            </td>

            <td>
              <div class="btn btn-light end col-4 py-3 rounded-0">
                <input name="toId" type="text" placeholder="Điểm đến" class="bg-light form-control border-0"
                  id="end-place" autocomplete="off" required />
              </div>
            </td>

            <td>
              <div class="btn btn-light date col-2 py-3 rounded-0">
                <input id="start-date-input" type="date" name="date" placeholder="Ngày khởi hành"
                  class="bg-light border-0 form-control" required />
              </div>
            </td>
            <td style="background-color: rgb(248, 174, 0); border-end-end-radius: 5px; border-start-end-radius: 5px;">
              <div style="display: flex; justify-content:center;">
                <button style="border: none; padding:0 2rem" class="vexere_search_btn" type="submit">Tìm vé</button>
              </div>
            </td>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>
              <div id="auto-complete-start" class="auto_complete_place">
                <ul class="start-locations-list">
                  {{#each locations }}
                  <li value={{this.id}}>{{ this.name }}</li>
                  {{/each}}
                </ul>
              </div>
            </td>
            <td>
              <div id="auto-complete-end" class="auto_complete_place">
                <ul class="end-locations-list">
                  {{#each locations }}
                  <li value={{this.id}}>{{ this.name }}</li>
                  {{/each}}
                </ul>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </form>
  </section>

  <section id="routes">
    <div class="container mt-5">
      <h4 class="">Tuyến đường phổ biến</h4>

      <div class="row row-horizon flex-nowrap flex-row overflow-auto">
        {{#each routes}}
        <div class="col-3">
          <div class="card h-100">
            <img src="/assets/img_card_route_1.png" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">{{ title }}</h5>
              <p class="card-text">{{ price }}</p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>

  <section id="user-vouchers">
    <div class="container mt-5">
      <h4 class="">Ưu đãi nổi bật</h4>

      <div class="row row-horizon flex-nowrap flex-row overflow-auto">
        {{#each userVouchers}}
        <div class="col-3">
          <div class="card h-100">
            <img src={{imageUrl}} class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">{{ title }}</h5>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>

  <section id="sponsor-vouchers">
    <div class="container mt-5">
      <h4 class="">Ưu đãi từ đối tác VeXeRe</h4>

      <div class="row row-horizon flex-nowrap flex-row overflow-auto">
        {{#each sponsorVouchers}}
        <div class="col-3">
          <div class="card h-100">
            <img src={{imageUrl}} class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">{{title}}</h5>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>

  <section id="car-house-vouchers">
    <div class="container mt-5">
      <h4>Dành cho đối tác nhà xe</h4>
      <div class="row row-horizon flex-nowrap flex-row overflow-auto">

        {{#each carHouseVouchers}}
        <div class="col-3">
          <div class="card h-100">
            <img src="/assets/img_card_deal_agency_2.png" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">
                Ưu đãi cho nhà xe
              </h5>
            </div>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </section>
</main>

