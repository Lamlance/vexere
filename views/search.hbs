<link rel="stylesheet" href="/css/global.css" />
<link rel="stylesheet" href="/css/Search.css" />
<link rel="stylesheet" href="/css/ChiTiet.css" />
<link rel="stylesheet" href="/css/main.css" />

<!-- main -->
<div class="search_result_container">
  <section class="search_result_filter">
    <!-- Price range -->
    <section>
      <label style="width: 100%;">
        <div id="price-label">Giá vé</div>

        <div class="range-input">
          <input id="min-price-slider" type="range" class="range-min" min="0" max="2000000" step="1000">
          <input id="max-price-slider" type="range" class="range-max" min="0" max="2000000" step="1000">
        </div>

        <div id="price-minmax-label">
          <span style="text-align: left;">₫0</span>
          <span style="text-align: right;">₫2000000</span>
        </div>
      </label>
    </section>

    <!--Seats -->
    <section id="filter_by_empty_seat">
      <h4>Số ghế trống: </h4>
      <span id="filter_by_empty_seat_action">
        <button value="1">+</button>
        <span>0</span>
        <button value="-1">-</button>
      </span>
    </section>

    <!-- Bus House -->
    <section>
      <label>Nhà xe
        <input type="text" id="search-filter-by-bus-house" />
      </label>
      <ul>
        {{#each routeDetail}}
        <li><label>
            <input type="checkbox" name="busHouse" value="Bảo Yến" />
            {{bus.house.Name}}
        </label></li>
        {{/each}}
      </ul>
    </section>
  </section>

  <section id="search_result_display" class="search_result_display">
    {{#each routeDetail}}
      {{> searchResult detail=this route=../route }}
    {{/each}}
  </section>
</div>
<!-- /main -->