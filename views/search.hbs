<link rel="stylesheet" href="/css/global.css" />
<link rel="stylesheet" href="/css/Search.css" />
<link rel="stylesheet" href="/css/ChiTiet.css" />
<link rel="stylesheet" href="/css/main.css" />

<!-- main -->
<div class="search_result_container">
  <form method="get" accept="/search" class="search_result_filter">
    <!-- Price range -->
    <section>
      <input style="display: none;" name="fromId" value="{{route.Location_Route_startLocIdToLocation.name}}">
      <input style="display: none;" name="toId" value="{{route.Location_Route_endLocIdToLocation.name}}">
      <input style="display: none;" name="date" type="date" value="{{date}}">

      <div style="width: 100%;">
        <div id="price-label">Giá vé</div>

        <div class="price-range">
          <label> Giá thấp nhất
            <input id="min-price-slider" name="min" type="number" class="range-min" min="0" max="2000000" step="1000">
          </label>
          <label> Giá cao nhất
            <input id="max-price-slider" name="max" type="number" class="range-max" min="0" max="2000000" step="1000">
          </label>
        </div>
      </div>
    </section>

    <!--Seats -->
    <section id="filter_by_empty_seat">
      <h4>Số ghế trống: </h4>
      <span id="filter_by_empty_seat_action">
        <button value="1">+</button>
        <span>0</span>
        <button value="-1">-</button>
      </span>
    </section>

    <!-- Bus House -->
    <section>
      <label>Nhà xe
        <input type="text" id="search-filter-by-bus-house" />
      </label>
      <ul>
        {{#each routeDetail}}
        <li><label>
            <input type="checkbox" name="busHouse" value={{Bus.BusHouse.id}} />
            {{Bus.BusHouse.Name}}
          </label></li>
        {{/each}}
      </ul>
    </section>

    <input type="submit" value="Apply" />
  </form>

  <section id="search_result_display" class="search_result_display">
    {{#each routeDetail}}
    {{> searchResult detail=this route=../route }}
    {{/each}}
  </section>
</div>
<!-- /main -->